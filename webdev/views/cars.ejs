<%- include("partials/header.ejs")%>

<h1> Welcome to the Used Car Online Emporium! </h1>
	
<div class="container">
	<div class="row">
		<%cars.forEach(function(car){%>
		<div class="cell col-sm-4">
			<img src="<%=car.imageLink%>" alt="<%=car.make%> <%=car.model%>" width=250><br>
			<strong><%=car.make%> - <%=car.model%> (<%=car.year%>)</strong><br>
			Price: <%=car.price%>
		</div>
		<%})%>
	</div>
</div>

<div class="form-group">
	<form action="/cars/new">
	<button>
		Add Car
	</button>
	</form>
</div>

<%- include("partials/footer.ejs")%>